      },
      "bearing_clearances": {
        "main_bearing_in": 0.002,
        "rod_bearing_in": 0.0025
      }
    },
    "notes": "Budget-friendly street/strip build with forged internals"
  },
  "field_mapping": {
    "3/8\" Cap Screws": "engine_internals_json.fasteners.main_cap_screws.size",
    "5.4\" Rod Length": "engine_internals_json.connecting_rods.length_in",
    "ARP 8740 Rod Bolts": "engine_internals_json.connecting_rods.bolts.type",
    "Forged .030 Pistons": {
      "material": "engine_internals_json.pistons.material",
      "oversize": "engine_internals_json.pistons.oversize_in"
    },
    "Flat-Top Piston Design": "engine_internals_json.pistons.design",
    "Pro-Stock I-Beam Rods": "engine_internals_json.connecting_rods.type",
    "3.400\" Stroke Series 9000 Cast Crankshaft": {
      "stroke": "engine_internals_json.crankshaft.stroke_in",
      "model": "engine_internals_json.crankshaft.model"
    }
  },
  "query_examples": {
    "find_arp_8740_rod_bolts": "SELECT * FROM builds WHERE engine_internals_json->'connecting_rods'->'bolts'->>'type' = 'ARP 8740';",
    "find_5_4_rod_length": "SELECT * FROM builds WHERE (engine_internals_json->'connecting_rods'->>'length_in')::numeric = 5.400;",
    "find_forged_pistons": "SELECT * FROM builds WHERE engine_internals_json->'pistons'->>'material' LIKE '%forged%';",
    "find_flat_top_pistons": "SELECT * FROM builds WHERE engine_internals_json->'pistons'->>'design' = 'flat-top';",
    "find_i_beam_rods": "SELECT * FROM builds WHERE engine_internals_json->'connecting_rods'->>'type' LIKE '%I-Beam%';",
    "find_3_8_cap_screws": "SELECT * FROM builds WHERE engine_internals_json->'fasteners'->'main_cap_screws'->>'size' = '3/8\"';",
    "find_3_4_stroke": "SELECT * FROM builds WHERE (engine_internals_json->'crankshaft'->>'stroke_in')::numeric = 3.400;"
  }
}
