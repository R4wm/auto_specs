{
  "description": "Example showing how the requested engine specifications are stored in engine_internals_json",
  "specs_requested": [
    "3/8\" Cap Screws",
    "5.4\" Rod Length",
    "ARP 8740 Rod Bolts",
    "Forged .030 Pistons",
    "Flat-Top Piston Design",
    "Pro-Stock I-Beam Rods",
    "3.400\" Stroke Series 9000 Cast Crankshaft"
  ],
  "engine_internals_json": {
    "crankshaft": {
      "model": "Series 9000 Cast",
      "stroke_in": 3.400,
      "material": "cast",
      "manufacturer": "Eagle",
      "notes": "Cast crankshaft for street/strip use"
    },
    "connecting_rods": {
      "type": "Pro-Stock I-Beam",
      "length_in": 5.400,
